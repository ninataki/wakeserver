#!/usr/bin/python

import os
import sys
import time
import json
import threading

CONF =            "/var/www/wakeserver/servers.conf"
PIDFILE =         "/run/wakeserverd.pid"
STATUS_DIR =      "/run/wakeserver"
STATUS_FILE =     "/run/wakeserver/status"
STATUS_FILE_NEW = "/run/wakeserver/status.new"
ERROR_FILE =      "/run/wakeserver/error"
PLUGIN_DIR =      "/var/www/wakeserver"
INTERVAL =        1
INTERVAL_WRITE =  2

def diagServers(servers, targets, interval):
    while True:
        for i in targets:
            server = servers[i]
            diag = server["scheme"]["diag"]
            cmd = ""
            if diag == "ping":
                cmd = "ping -c1 -W%d %s >/dev/null" % \
                    (interval, server["ipaddr"])
            elif diag == "custom":
                cmd = "%s/%s '%s' '%s' %d" % \
                    (PLUGIN_DIR, 
                     server["scheme"]["type"], 
                     server["ipaddr"], server["macaddr"],
                     interval)

            if cmd != "":
                if os.system(cmd) == 0 :
                    server["status"] = "on"
                    time.sleep(interval)
                else:
                    server["status"] = "off"

class Daemon :
    def __init__(self):
        with open(CONF) as f:
            self.servers = json.load(f)

        self.operativeServers = []
        self.normalServers = []
        for i in range(0, len(self.servers)):
            server = self.servers[i]
            if "user" in server["scheme"]:
                del server["scheme"]["user"]
            if "diag" in server["scheme"]:
                diag = server["scheme"]["diag"]
                if diag == "normallyoff":
                    server["status"] = "off"
                elif diag == "alwayson":
                    server["status"] = "on"
                else:
                    server["status"] = "off"
                    if "on" in server["scheme"] or \
                       "off" in server["scheme"]:
                        self.operativeServers.append(i)
                    else:
                        self.normalServers.append(i)
        if not os.path.isdir(STATUS_DIR):
            os.mkdir(STATUS_DIR)
        with open(STATUS_FILE, "w") as f:
            json.dump(self.servers, f)
        self.hfThread = threading.Thread(
            target=diagServers, name="th_hf", 
            args=(self.servers, self.operativeServers, INTERVAL))
        self.nmThread = threading.Thread(
            target=diagServers, name="th_nm",
            args=(self.servers, self.normalServers, INTERVAL))
        self.hfThread.start()
        self.nmThread.start()

    def run(self):
        while True:
            time.sleep(INTERVAL_WRITE)
            with open(STATUS_FILE_NEW, "w") as f:
                json.dump(self.servers, f)
            os.rename(STATUS_FILE_NEW, STATUS_FILE)

def main():
    if daemonize(False, False) == 0:
        daemon = Daemon()
        daemon.run()

def daemonize(nochdir, noclose):
    if os.fork() != 0:
        sys.exit(0)
    
    if os.umask(0) < 0:
        return -1
    
    if not nochdir:
        os.chdir("/")

    if not noclose:
        sys.stdin.close()
        sys.stdout.close()
        sys.stderr.close()
        sys.stdin = open("/dev/null", "r")
        sys.stdout = open("/dev/null", "w")
        sys.stderr = open(ERROR_FILE, "w")


    with open(PIDFILE, "w") as f :
        print >> f, "%d" % os.getpid()

    return 0

if __name__ == '__main__':
    main()
    sys.exit(0)
